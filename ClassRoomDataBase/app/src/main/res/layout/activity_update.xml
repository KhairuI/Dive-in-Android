<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/updateToolbarId"></include>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Update Player"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:text="Index Id"
            android:id="@+id/updateIndexId"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/updateCodeId"
                android:inputType="numberDecimal"
                android:hint="Enter Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="text"
                android:id="@+id/updatePlayerNameId"
                android:hint="Enter Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:textColor="@android:color/white"
                android:background="@drawable/button_design"
                android:id="@+id/updatePickButtonId"
                android:backgroundTint="@color/colorPrimary"
                android:text="Pick"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

            </Button>

            <TextView
                android:id="@+id/updatePlayerTypeTextId"
                android:layout_marginLeft="8dp"
                android:text="Player Type"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <Button
            android:text="Update"
            android:background="@drawable/button_design"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/updatePlayerButtonId"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>



    </LinearLayout>


</LinearLayout>