<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/detailsToolbarId"></include>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Player Details"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Index Id"
                android:textSize="18sp"
                android:id="@+id/detailsIndexId"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Name"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:id="@+id/detailsNameId"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Code"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:id="@+id/detailsCodeId"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Type"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:id="@+id/detailsTypeId"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <Button
            android:text="Update"
            android:textColor="@android:color/white"
            android:background="@drawable/button_design"
            android:layout_marginTop="10dp"
            android:id="@+id/updateButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>

</LinearLayout>